{
  "name": "population-global-historical",
  "title": "Global Historical Population",
  "sources":[
    {
      "title": "Appendix in Joel E. Cohen, *How Many People Can the Earth Support?*, Norton 1996, ISBN 0-393-31495-2"
    }
  ],
  "licenses": [
    {
      "name": "odc-pddl",
      "title": "Open Data Commons Public Domain Dedication and Licence (PDDL)",
      "path": "http://opendatacommons.org/licenses/pddl/"
    }
  ],
  "resources": [
    {
      "path": "data/population.csv",
      "profile": "tabular-data-resource",
      "encoding": "utf-8",
      "name": "population",
      "format": "csv",
      "mediatype": "text/csv",
      "schema": {
        "fields": [
          {
            "name": "Year",
            "type": "number"
          },
          {
            "name": "Average",
            "type": "number",
            "description": "Average number of people in millions"
          },
          {
            "name": "Deevey",
            "type": "number",
            "description": "Number of people in millions"
          },
          {
            "name": "McEvedy and Jones 1978",
            "type": "number",
            "description": "Number of people in millions"
          },
          {
            "name": "Durand Low",
            "type": "number",
            "description": "Number of people in millions"
          },
          {
            "name": "Durand High",
            "type": "number",
            "description": "Number of people in millions"
          },
          {
            "name": "Clark",
            "type": "number",
            "description": "Number of people in millions"
          },
          {
            "name": "Biraben",
            "type": "number",
            "description": "Number of people in millions"
          },
          {
            "name": "Blaxter",
            "type": "number",
            "description": "Number of people in millions"
          },
          {
            "name": "UN",
            "type": "number",
            "description": "Number of people in millions"
          },
          {
            "name": "Kremer",
            "type": "number",
            "description": "Number of people in millions"
          }
        ]
      }
    }
  ],
  "views": [
    {
      "name": "population-global-historical",
      "title": "Global historical population data since 2000 BC",
      "resources": [
        {
          "name": "population",
          "transform": [
            {
              "type": "filter",
              "expression": "parseInt(data['Year']) > -2500"
            }
          ]
        }
      ],
      "specType": "simple",
      "spec": {
        "type": "line",
        "group": "Year",
        "series": [
          "Average"
        ]
      }
    }
  ]
}